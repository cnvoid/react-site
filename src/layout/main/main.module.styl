:local(.Layout)
  width: 100%
  :global
    .head
      height 70px
      line-height 70px
      border 1px solid transparent
      position fixed
      width 100%
      top 0
      border-bottom 20px solid #EBECEC
      letter-spacing 3px
      box-sizing content-box
      font-size 16px
      z-index 888

      .logo
        width 180px
        margin 10px 0
        height 50px
        img
          height 100%
          vertical-align unset

      .top-nav
        padding-left 20px
        li
          line-height 70px
          display inline-block
          margin 0 20px
          cursor pointer

      .dropdown
        width 160px
        text-align right
      .el-dropdown-link
        text-align right

    .sub-nav
      width 180px
      // min-height 500px
      position fixed
      top 90px
      .is-active
        background rgba(255, 191, 19, .3)
        color inherit
      .el-submenu
        .el-menu-item:last-child
          border-bottom 1px solid #EBECEC
      .el-menu-item:hover
        background #fef7e6
      .el-submenu__title
        border-bottom 1px solid #EBECEC
      .el-menu
        border-right none

    .main
      // border-top 1px solid transparent
      margin 70px 0 0 200px
      width 1100px
      height 100000px
      .crumbs
        height 55px
        line-height 55px
        color #676767
        cursor pointer
        margin-left 20px
        .el-breadcrumb
          line-height inherit
        .el-breadcrumb__item:last-child
          color #342E2C
          cursor auto


      .content
        border-top 1px solid #EBECEC

        .search
          margin 20px